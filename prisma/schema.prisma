// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  acctId   String @default(uuid())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  profile  Profile?
  cart     Cart?
  products Product[]

  roles UserRoles[]

  @@map("users")
}

model Role {
  id   Int    @id @default(autoincrement())
  name String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users UserRoles[]

  @@map("roles")
}

model UserRoles {
  user   User @relation(fields: [userId], references: [id])
  userId Int // relation scalar field (used in the `@relation` attribute above)
  role   Role @relation(fields: [roleId], references: [id])
  roleId Int // relation scalar field (used in the `@relation` attribute above)

  @@id([roleId, userId])
  @@map("user_roles")
}

model Profile {
  id         Int     @id @default(autoincrement())
  firstname  String?
  lastname   String?
  phone      String?
  photo      String?
  lastLogin  String?
  isVerified String?
  acctId     String  @unique @db.Uuid

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User @relation(fields: [userId], references: [id])
  userId Int  @unique // relation scalar field (used in the `@relation` attribute above)

  @@map("profiles")
}

model Product {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  title        String @unique
  slug         String @unique
  image        String[]
  color        String[]
  category     String[]
  price        Int
  brand        String
  countInStock Int?
  rating       Int?
  desc         String
  size         String[]
  numReviews   String?
  prodId       String @default(uuid())

  admin   User @relation(fields: [adminId], references: [id])
  adminId Int // relation scalar field  (used in the `@relation` attribute above)

  carts CartProducts[]

  @@map("products")
}

model Cart {
  id Int @id @default(autoincrement())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User @relation(fields: [userId], references: [id])
  userId Int  @unique // relation scalar field (used in the `@relation` attribute abcart

  products CartProducts[]

  @@map("carts")
}

model CartProducts {
  cart      Cart     @relation(fields: [cartId], references: [id])
  cartId    Int // relation scalar field (used in the `@relation` attribute above)
  product   Product  @relation(fields: [productId], references: [id])
  productId Int // relation scalar field (used in the `@relation` attribute above)
  addedAt   DateTime @default(now())
  addedBy   String

  @@id([productId, cartId])
  @@map("cart_products")
}

model Order {
  id Int @id @default(autoincrement())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("orders")
}

model Category {
  id Int @id @default(autoincrement())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  title String
  desc  String

  @@map("categories")
}
